{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./build/",
    "baseUrl": "./src",
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "lib": [
      "DOM"
    ],
    "target": "ES6",
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "*.js",
    "utils/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}